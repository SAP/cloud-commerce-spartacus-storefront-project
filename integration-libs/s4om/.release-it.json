{
  "git": {
    "requireCleanWorkingDir": true,
    "requireUpstream": false,
    "tagName": "s4om-${version}",
    "commitMessage": "Bumping S4OM version to ${version}",
    "tagAnnotation": "Bumping S4OM version to ${version}"
  },
  "npm": {
    "publishPath": "./../../dist/s4om"
  },
  "hooks": {
    "after:version:bump": "cd ../.. && yarn build:s4om"
  },
  "github": {
    "release": true,
    "assets": ["../../docs.tar.gz", "../../docs.zip"],
    "releaseName": "@spartacus/s4om@${version}",
    "releaseNotes": "ts-node ../../scripts/changelog.ts --verbose --lib s4om --to s4om-${version}"
  },
  "plugins": {
    "../../scripts/release-it/bumper.js": {
      "out": [
        {
          "file": "package.json",
          "path": [
            "peerDependencies.@spartacus/core",
            "peerDependencies.@spartacus/storefront",
            "peerDependencies.@spartacus/checkout",
            "peerDependencies.@spartacus/schematics"
          ]
        }
      ]
    }
  }
}
