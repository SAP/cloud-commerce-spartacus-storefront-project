{
  "git": {
    "requireCleanWorkingDir": true,
    "requireUpstream": false,
    "tagName": "cds-${version}",
    "commitMessage": "Bumping cds version to ${version}",
    "tagAnnotation": "Bumping cds version to ${version}"
  },
  "npm": {
    "publishPath": "./../../dist/cds"
  },
  "hooks": {
    "after:version:bump": "cd ../.. && yarn build:cds"
  },
  "github": {
    "release": true,
    "assets": ["../../docs.tar.gz", "../../docs.zip"],
    "releaseName": "@commerce-storefront-toolset/cds@${version}",
    "releaseNotes": "ts-node ../../scripts/changelog.ts --verbose --lib cds --to cds-${version}"
  },
  "plugins": {
    "../../scripts/release-it/bumper.js": {
      "out": [
        {
          "file": "package.json",
          "path": [
            "peerDependencies.@commerce-storefront-toolset/core",
            "peerDependencies.@commerce-storefront-toolset/schematics",
            "peerDependencies.@commerce-storefront-toolset/storefront",
            "peerDependencies.@commerce-storefront-toolset/tracking",
            "peerDependencies.@commerce-storefront-toolset/checkout"
          ]
        }
      ]
    }
  }
}
