{
  "$schema": "http://json-schema.org/schema",
  "id": "CDSSchematics",
  "title": "CDS Schematics",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "tenant": {
      "type": "string",
      "description": "The tenant name.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is your tenant name?"
    },
    "baseUrl": {
      "type": "string",
      "description": "The base URL.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is your base URL?"
    },
    "strategyId": {
      "type": "string",
      "description": "The strategy ID to use for the strategyProducts endpoint.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is your strategy ID?"
    },
    "profileTagLoadUrl": {
      "type": "string",
      "description": "Where to load ProfileTag from.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Where to load ProfileTag from? (optional)"
    },
    "profileTagConfigUrl": {
      "type": "string",
      "description": " Configuration URL for ProfileTag.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is the ProfileTag configuration URL? (optional)"
    }
  },
  "required": ["tenant", "baseUrl", "strategyId"]
}
