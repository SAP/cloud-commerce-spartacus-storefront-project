{
  "git": {
    "requireCleanWorkingDir": true,
    "requireUpstream": false,
    "tagName": "cdc-${version}",
    "commitMessage": "Bumping CDC version to ${version}",
    "tagAnnotation": "Bumping CDC version to ${version}"
  },
  "npm": {
    "publishPath": "./../../dist/cdc"
  },
  "hooks": {
    "after:version:bump": "cd ../.. && yarn build:cdc"
  },
  "github": {
    "release": true,
    "assets": ["../../docs.tar.gz", "../../docs.zip"],
    "releaseName": "@commerce-storefront-toolset/cdc@${version}",
    "releaseNotes": "ts-node ../../scripts/changelog.ts --verbose --lib cdc --to cdc-${version}"
  },
  "plugins": {
    "../../scripts/release-it/bumper.js": {
      "out": [
        {
          "file": "package.json",
          "path": [
            "peerDependencies.@commerce-storefront-toolset/asm",
            "peerDependencies.@commerce-storefront-toolset/storefront",
            "peerDependencies.@commerce-storefront-toolset/schematics",
            "peerDependencies.@commerce-storefront-toolset/core",
            "peerDependencies.@commerce-storefront-toolset/user"
          ]
        }
      ]
    }
  }
}
