{
  "$schema": "http://json-schema.org/schema",
  "$id": "EpdVisualizationSchematics",
  "title": "EpdVisualization Schematics",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "features": {
      "type": "array",
      "uniqueItems": true,
      "default": ["EpdVisualization"]
    },
    "baseUrl": {
      "type": "string",
      "description": "Enter the base URL (origin) of your EPD Fiori Launchpad",
      "default": "https://epd-dev-eu20-consumer.epddev.cfapps.eu20.hana.ondemand.com",
      "x-prompt": "[EPD Visualization] What is the base URL (origin) of your EPD Fiori Launchpad?"
    }
  },
  "required": []
}
