{
  "$schema": "http://json-schema.org/schema",
  "$id": "OppsSchematics",
  "title": "OPPS Schematics",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "debug": {
      "description": "Display additional details during the running process.",
      "type": "boolean",
      "default": false
    },
    "lazy": {
      "type": "boolean",
      "description": "Lazy load the OPPS features.",
      "default": true
    },
    "features": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "enum": ["OPPS-ALL", "OPPS-COUPON-CODES"],
        "type": "string"
      },
      "default": ["OPPS-ALL"],
      "x-prompt": {
        "message": "Which OPPS features would you like to set up?",
        "type": "list",
        "items": [
          { "value": "OPPS-ALL", "label": "All OPPS Features" },
          {
            "value": "OPPS-COUPON-CODES",
            "label": "OPPS Coupon Codes"
          }
        ]
      }
    }
  },
  "required": []
}
