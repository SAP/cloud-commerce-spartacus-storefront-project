<%#
  The data structure for this file looks like this:
    {
      from: 'v1.2.3',
      to: 'v1.2.4',
      packages: { /* The PackageInfoMap from "lib/packages.ts" */
      // For a commit with description:
      // ------------------------------------------------------
      //   feat(@commerce-storefront-toolset/core): add something to this
      //
      //   Fixes #123
      // ------------------------------------------------------
      // See https://github.com/conventional-changelog/conventional-changelog/tree/master/packages/conventional-commits-parser
      commits: [ {
        type: 'feat', // | 'fix' | 'refactor' | 'build' | 'test' | 'ci'
        scope: '@commerce-storefront-toolset/core',  // package name (or null)
        subject: 'add something to this',
        header: 'feat(@commerce-storefront-toolset/core): add something to this',
        body: null,
        footer: 'Fixes #123',
        references: [
          {
            action: 'Closes',
            owner: null,
            repository: null,
            issue: '123',
            raw: '#123',
            prefix: '#'
          }
        ],
      } ]
    }
%><%
  // Sort those packages to the top, in those orders. Others will be sorted alphabetically.
  const CUSTOM_SORT_ORDER = [
    '@commerce-storefront-toolset/core',
    '@commerce-storefront-toolset/storefront',
    '@commerce-storefront-toolset/styles',
    '@commerce-storefront-toolset/assets',
    '@commerce-storefront-toolset/schematics',
    '@commerce-storefront-toolset/user',
    '@commerce-storefront-toolset/cds',
    '@commerce-storefront-toolset/organization',
    '@commerce-storefront-toolset/product',
    '@commerce-storefront-toolset/product-configurator',
    '@commerce-storefront-toolset/storefinder',
    '@commerce-storefront-toolset/checkout',
    '@commerce-storefront-toolset/asm',
    '@commerce-storefront-toolset/smartedit',
    '@commerce-storefront-toolset/qualtrics',
    '@commerce-storefront-toolset/cdc',
    '@commerce-storefront-toolset/digital-payments',
    '@commerce-storefront-toolset/tracking',
    '@commerce-storefront-toolset/cart',
    '@commerce-storefront-toolset/order',
    '@commerce-storefront-toolset/setup',
    '@commerce-storefront-toolset/epd-visualization'
  ];
%>
# Commits
<table>
<tbody>
  <tr>
    <td><b>Commit</b>
    <td><b>Description</b>
    <td><b>Notes</b>
  </tr>
<%
  // Get unique scopes.
  const scopes = commits.map(x => x.scope)
    .sort()
    .filter((v, i, a) => v !== a[i - 1])
    .sort((a, b) => {
        // Sort using the sorting order above, or against each others if undefined.
        const aOrder = CUSTOM_SORT_ORDER.indexOf(a);
        const bOrder = CUSTOM_SORT_ORDER.indexOf(b);
        return aOrder == -1 ? bOrder == -1 ? (a || '').localeCompare(b || '') : 1 : aOrder - bOrder;
    });
  for (const scope of scopes) {
    // Do feature first, then fixes.
    const allScopeCommits = commits.filter(x => x.scope === scope);
    const scopeCommits = [
      ...allScopeCommits.filter(x => x.type === 'feat'),
      ...allScopeCommits.filter(x => x.type === 'fix'),
    ];
    if (scopeCommits.length == 0) {
        continue;
    }
%>
  <%
      let nbRows = 0;
      for (const commit of scopeCommits) {
          nbRows++;
          switch (commit.type) {
              case 'fix': %><%- include('./changelog-fix', commit) %><% break;
              case 'feat': %><%- include('./changelog-feat', commit) %><% break;
          }
      }
      // Add an empty row to get the alternating colors in sync.
      if (scope != scopes[scopes.length - 1] && nbRows % 2 && !library) { %>
        <tr></tr>
      <% } %>
  <% } %>
</tbody>
</table>
<% if(deprecations.length) { %>
  # Deprecations
  <ul>
  <% for (const change of deprecations) {
    %><%- include('./note', change) %><%
  } %>
  </ul>
<% } %>
<% if(breakingChanges.length) { %>
  # Breaking changes
  <ul>
  <% for (const change of breakingChanges) {
    %><%- include('./note', change) %><%
  } %>
  </ul>
<% } %>
