{
  "name": "@spartacus/schematics",
  "version": "3.0.0",
  "description": "Spartacus schematics",
  "homepage": "https://github.com/SAP/spartacus",
  "repository": "https://github.com/SAP/spartacus/tree/develop/projects/schematics",
  "keywords": [
    "spartacus",
    "schematics"
  ],
  "scripts": {
    "prepare:schematics": "yarn install",
    "clean": "yarn prepare:schematics && rimraf \"src/**/*.js\" \"src/**/*.js.map\" \"src/**/*.d.ts\"",
    "build": "yarn clean && tsc -p ./tsconfig.schematics.json",
    "test": "yarn clean && jest --config ./jest.schematics.config.js"
  },
  "author": "",
  "license": "MIT",
  "schematics": "./src/collection.json",
  "dependencies": {
    "@angular/localize": "^10.1.0",
    "@nguniversal/express-engine": "^10.1.0"
  },
  "peerDependencies": {
    "@angular-devkit/core": "^10.1.0",
    "@angular-devkit/schematics": "^10.1.0",
    "@angular/cli": "^10.1.0",
    "@angular/core": "^10.1.0",
    "@schematics/angular": "^10.1.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^12.11.1",
    "@types/shelljs": "^0.8.7",
    "jest": "^26.6.2",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.3",
    "ts-jest": "^26.4.3",
    "typescript": "~4.0.2"
  },
  "ng-add": {
    "save": "devDependencies"
  },
  "ng-update": {
    "migrations": "./src/migrations/migrations.json",
    "packageGroup": [
      "@spartacus/core",
      "@spartacus/storefront",
      "@spartacus/styles",
      "@spartacus/cds",
      "@spartacus/assets",
      "@spartacus/incubator",
      "@spartacus/organization",
      "@spartacus/product",
      "@spartacus/storefinder",
      "@spartacus/cdc",
      "@spartacus/setup"
    ]
  },
  "main": "src/public_api.js"
}
