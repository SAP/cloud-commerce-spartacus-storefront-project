{
  "name": "@commerce-storefront-toolset/schematics",
  "version": "4.1.0-next.0",
  "description": "Spartacus schematics",
  "keywords": [
    "spartacus",
    "schematics"
  ],
  "homepage": "https://github.com/SAP/spartacus",
  "repository": "https://github.com/SAP/spartacus/tree/develop/projects/schematics",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "yarn clean && yarn --cwd ../../ generate:deps && ../../node_modules/.bin/tsc -p ./tsconfig.schematics.json",
    "clean": "../../node_modules/.bin/rimraf \"index.js*\" \"index.d.ts\" \"src/**/*.js\" \"src/**/*.js.map\" \"src/**/*.d.ts\"",
    "test": "yarn clean && ../../node_modules/.bin/jest --config ./jest.schematics.config.js"
  },
  "dependencies": {
    "@angular/pwa": "^13.3.0",
    "@nguniversal/express-engine": "^13.1.1",
    "semver": "^7.3.5",
    "ts-morph": "^9.1.0",
    "tslib": "^2.3.0"
  },
  "peerDependencies": {
    "@angular-devkit/core": "^13.3.0",
    "@angular-devkit/schematics": "^13.3.0",
    "@angular/compiler": "^13.3.0",
    "@schematics/angular": "^13.3.0",
    "jsonc-parser": "^3.0.0",
    "parse5": "^6.0.1",
    "typescript": "^4.6.4"
  },
  "ng-add": {
    "save": "devDependencies"
  },
  "ng-update": {
    "migrations": "./src/migrations/migrations.json",
    "packageGroup": [
      "@commerce-storefront-toolset/core",
      "@commerce-storefront-toolset/storefront",
      "@commerce-storefront-toolset/styles",
      "@commerce-storefront-toolset/user",
      "@commerce-storefront-toolset/cds",
      "@commerce-storefront-toolset/assets",
      "@commerce-storefront-toolset/organization",
      "@commerce-storefront-toolset/product",
      "@commerce-storefront-toolset/storefinder",
      "@commerce-storefront-toolset/checkout",
      "@commerce-storefront-toolset/asm",
      "@commerce-storefront-toolset/smartedit",
      "@commerce-storefront-toolset/qualtrics",
      "@commerce-storefront-toolset/cdc",
      "@commerce-storefront-toolset/tracking",
      "@commerce-storefront-toolset/cart",
      "@commerce-storefront-toolset/order",
      "@commerce-storefront-toolset/digital-payments",
      "@commerce-storefront-toolset/epd-visualization",
      "@commerce-storefront-toolset/setup"
    ]
  },
  "schematics": "./src/collection.json"
}
