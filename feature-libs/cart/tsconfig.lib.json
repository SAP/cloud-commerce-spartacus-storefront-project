{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "declarationMap": true,
    "target": "es2015",
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "types": [],
    "lib": ["dom", "esnext"],
    "paths": {
      "@spartacus/core": ["dist/core"],
      "@spartacus/storefront": ["dist/storefrontlib"]
    },
    "strict": true,
    "noImplicitAny": false, // TODO: Remove this line to enable strict mode
    "strictNullChecks": false, // TODO: Remove this line to enable strict mode
    "strictFunctionTypes": false, // TODO: Remove this line to enable strict mode
    // --------
    "noImplicitThis": false, // TODO: Remove this line to enable strict mode
    "alwaysStrict": false, // TODO: Remove this line to enable strict mode
    "strictBindCallApply": false, // TODO: Remove this line to enable strict mode
    "strictPropertyInitialization": false // TODO: Remove this line to enable strict mode
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "enableResourceInlining": true,
    "strictInputAccessModifiers": true
  },
  "exclude": ["test.ts", "**/*.spec.ts"]
}
